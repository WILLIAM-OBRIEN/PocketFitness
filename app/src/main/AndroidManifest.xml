<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.williamobrien.pocketfitness">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fit_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" />
        <activity android:name=".BMI_Calculator" />
        <activity android:name=".BmiResultPage" />
        <activity android:name=".CalorieResults" />
        <activity android:name=".PedometreActivity" />
        <activity android:name=".CalorieCount" />
        <activity android:name=".SplashScreenActivity"></activity>
    </application>

</manifest>